<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:cardBackgroundColor="@color/box_back"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"    >



            <ImageView
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                android:id="@+id/back_arrow_img_event_information"
                android:src="@drawable/ic_back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                />

            <android.support.v4.view.ViewPager
                card_view:layout_constraintTop_toBottomOf="@id/back_arrow_img_event_information"
                android:id="@+id/box_img_event_information"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerCardView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toBottomOf="@id/recyclerCardView"
        card_view:cardBackgroundColor="@color/box_back"
        android:layout_marginTop="15dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

       <android.support.constraint.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/textViewTitle"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:fontFamily="sans-serif"
               android:gravity="start"
               android:paddingStart="20dp"
               android:paddingTop="15dp"
               android:paddingBottom="10dp"
               android:text="Title"
               android:textColor="@color/black"
               android:textSize="20sp"
               android:textStyle="bold"
               card_view:layout_constraintEnd_toStartOf="@id/textAge"
               card_view:layout_constraintHorizontal_bias="0.0"
               card_view:layout_constraintStart_toStartOf="parent"
               card_view:layout_constraintTop_toTopOf="parent" />



           <TextView
               android:id="@+id/textAge"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="20dp"
               android:paddingStart="5dp"
               android:paddingEnd="5dp"
               android:text="age"
               android:fontFamily="sans-serif"
               android:textSize="15sp"
               android:layout_marginTop="15dp"
               card_view:layout_constraintTop_toTopOf="parent"
               card_view:layout_constraintEnd_toEndOf="parent"
               />

           <TextView
               android:id="@+id/textViewPrice"
               android:layout_width="wrap_content"
               android:layout_height="37dp"
               android:fontFamily="sans-serif"
               android:paddingStart="20dp"
               android:paddingBottom="10dp"
               android:text="Price"
               android:textColor="@color/black"
               android:textSize="18sp"
               android:textStyle="bold"
               card_view:layout_constraintStart_toStartOf="parent"
               card_view:layout_constraintTop_toBottomOf="@id/textViewTitle" />



           <TextView
               android:id="@+id/textData"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               card_view:layout_constraintTop_toBottomOf="@id/textViewPrice"
               card_view:layout_constraintStart_toStartOf="parent"
               android:text="Data"
               android:textColor="@color/black"
               android:fontFamily="sans-serif"
               android:textSize="18sp"
               android:layout_marginStart="20dp"
               />


           <TextView
               android:id="@+id/place"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               card_view:layout_constraintTop_toBottomOf="@id/textData"
               android:text="@string/place"
               android:textColor="@color/black"
               android:fontFamily="sans-serif"
               android:textSize="18sp"
               android:paddingBottom="10dp"
               android:paddingStart="20dp"
               android:layout_marginTop="5dp"/>

           <View
               android:id="@+id/line4"
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="@color/gray"
               card_view:layout_constraintTop_toBottomOf="@id/place"
               android:layout_marginTop="15dp"
               />

           <TextView
               android:id="@+id/publicationDate"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               card_view:layout_constraintTop_toBottomOf="@id/line4"
               card_view:layout_constraintStart_toStartOf="parent"
               android:text="publicationDate"
               android:textColor="@color/black"
               android:fontFamily="sans-serif"
               android:textSize="18sp"
               android:paddingBottom="10dp"
               android:paddingStart="20dp"
               android:layout_marginTop="15dp"/>

           <ImageView
               android:id="@+id/ic_like_red"
               android:src="@drawable/ic_like_red"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               card_view:layout_constraintTop_toBottomOf="@id/line4"
               android:layout_marginTop="15dp"
               card_view:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="20dp"
               />

           <TextView
               android:id="@+id/like_text"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               card_view:layout_constraintTop_toTopOf="@id/ic_like_red"
               card_view:layout_constraintEnd_toStartOf="@id/ic_like_red"
               android:text="like"
               android:textColor="@color/black"
               android:fontFamily="sans-serif"
               android:textSize="18sp"/>



       </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recyclerCardView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toBottomOf="@id/recyclerCardView2"
        card_view:cardBackgroundColor="@color/box_back"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                card_view:layout_constraintTop_toTopOf="parent"
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="description"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="18sp"
                android:paddingTop="15dp"
                android:paddingBottom="5dp"
                android:paddingStart="20dp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/text_under_desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="description_text"
                android:textColor="@color/black"
                android:textSize="16sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@id/description_text" />





        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
</ScrollView>